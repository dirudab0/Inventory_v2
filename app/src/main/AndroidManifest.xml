<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ttg.inventory">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivityUser"
            android:label="@string/title_activity_main_user"></activity>

        <activity
            android:name=".ui.MainActivityBodega"
            android:label="@string/title_activity_main_bodega"></activity>

        <activity android:name=".ui.MainActivityProducto" />

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/network_security_config" />
        <activity
            android:name=".ui.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.FirebaseUIActivity" />
        <activity
            android:name=".ui.DashboardActivity"
            android:label="@string/title_activity_producto"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.InformesActivity"
            android:label="@string/title_activity_informes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.ProductoActivity"
            android:label="@string/title_activity_producto"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.BaseScannerActivity" />
        <activity android:name=".ui.SimpleScannerActivity" />
        <activity android:name=".ui.Ventas" />
        <activity android:name=".ui.BodegaActivity" />
        <activity android:name=".ui.UserActivity" />
        <activity android:name=".ui.ConfiguracionInicial" />
        <activity android:name=".ui.GastoActivity" />
        <activity android:name=".ui.MainActivityGasto" />

    </application>

</manifest>