<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context=".ui.login.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/textTitle"
                    android:text="PRODUCTO"
                    android:textSize="34sp"
                    android:textColor="@android:color/white"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/imageBodega"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                android:src="@drawable/producto"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="62dp" />

        <RelativeLayout
                android:layout_marginTop="32dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editNombre"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="12sp"
                    android:inputType="textPersonName"
                    android:hint="Codigo" />

            <ImageView
                android:id="@+id/imgscaner"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:onClick="launchSimpleActivity"
                android:src="@drawable/barras" />

        </RelativeLayout>

            <EditText
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:hint="Nombre del Producto"
                android:inputType="textPersonName"
                android:id="@+id/editNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"/>

            <GridLayout
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:columnOrderPreserved="false">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/editCorreo"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:hint="Cantidad de Reserva"
                        android:inputType="textPersonName"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/editTelefono"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:hint="Precio de venta"
                        android:inputType="textPersonName"
                        android:textSize="12sp" />

                </RelativeLayout>

            </GridLayout>

            <GridLayout
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:columnOrderPreserved="false">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <EditText
                android:id="@+id/editCantidad"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="Cantidad"
                android:inputType="textPersonName"
                 />

            <EditText
                android:id="@+id/editPCompra"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:hint="Precio de compra"
                android:inputType="textPersonName"
                />

            </RelativeLayout>

            </GridLayout>

            <Spinner
                android:id="@+id/spinnerUnidad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="20dp"
                android:textSize="12sp" />

            <Spinner
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/spinnerCategoria"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:textSize="12sp"
                />

            <EditText
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/editAdicional"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="12dp"
                android:textSize="12sp"
                android:gravity="start|top"
                android:hint="Observacion"
                android:inputType="textMultiLine"
                app:layout_constraintStart_toStartOf="@+id/editPCompra"
                app:layout_constraintTop_toBottomOf="@+id/editTelefono" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabAddicionar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="15dp"
                app:maxImageSize="35dp"
                android:src="@drawable/ic_save"
                app:backgroundTint="#009B8686" />

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>